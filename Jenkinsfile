pipeline {    agent any    stages {        stage('Build') {            steps {                // Compila el proyecto Java utilizando Maven                sh 'mvn clean package'            }        }        stage('Test') {            steps {                // Ejecuta pruebas unitarias                sh 'mvn test'            }        }        stage('Docker Build and Run') {            steps {                script {                    echo 'Construyendo y ejecutando el contenedor Docker...'                }                // Construye la imagen Docker                sh 'docker build -t myapp .'                // Elimina cualquier contenedor previo                sh 'docker rm -f myapp || true'                // Ejecuta el contenedor Docker                sh 'docker run -d --name myapp -p 8080:8080 myapp'            }        }        stage('Terraform Init') {            steps {                script {                    echo 'Inicializando Terraform...'                }                // Inicializa Terraform                sh 'terraform init'            }        }        stage('Terraform Apply') {            steps {                script {                    echo 'Aplicando configuración de Terraform...'                }                // Aplica la configuración de Terraform                sh 'terraform apply -auto-approve'            }        }    }}