pipeline {    agent any    stages {        stage('Build') {            steps {                // Compila el proyecto Java utilizando Maven                bat 'mvn clean package'            }        }        stage('Test') {            steps {                // Ejecuta pruebas unitarias                bat 'mvn test'            }        }        stage('Deploy') {            steps {                // Construye la imagen Docker                bat 'docker build -t myapp .'                // Verifica y elimina contenedores existentes (si los hay)                bat 'docker rm -f myapp || exit 0'                // Ejecuta el contenedor Docker                bat 'docker run -d --name myapp -p 8081:8080 myapp'            }        }    }}