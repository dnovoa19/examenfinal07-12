pipeline {    agent any    stages {        stage('Build') {            steps {                // Compila el proyecto Java utilizando Maven                sh 'mvn clean package'            }        }        stage('Test') {            steps {                // Ejecuta pruebas unitarias                sh 'mvn test'            }        }        stage('Deploy') {            steps {                // Construye la imagen Docker                sh 'docker build -t myapp .'                // Verifica y elimina contenedores existentes (si los hay)                sh 'docker rm -f myapp || true'                // Ejecuta el contenedor Docker                sh 'docker run -d --name myapp -p 8081:8080 myapp'            }        }    }}